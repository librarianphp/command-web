{
    "name": "librarianphp/command-web",
    "type": "library",
    "description": "Librarian's web controllers",
    "license": "MIT",
    "homepage": "https://github.com/librarianphp/command-web",
    "keywords": ["cli","command-line", "markdown"],
    "autoload": {
        "psr-4": {
            "librarianphp\\": "Command/"
        }
    },
    "require": {
        "minicli/minicli": "^4.2.0",
        "librarianphp/librarian-core": "^4.5.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.2",
        "laravel/pint": "^1.1",
        "mockery/mockery": "^1.6"
    },
    "scripts": {
        "lint": ["pint"],
        "test:unit" : ["pest"],
        "test:lint": ["pint --test"],
        "test" : [
            "@test:lint",
            "@test:unit"
        ]
    },

    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
